# Environment variables for vn-stock-info-app
# Copy this file to .env and fill in your values

# Rails master key (required for production)
RAILS_MASTER_KEY=your_rails_master_key_here

# Database configuration
DATABASE_URL=postgresql://trader:trader@db:5432/vnstocks_production

# Redis configuration
REDIS_URL=redis://redis:6379/0

# Application settings
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=true

# Optional: Customize PostgreSQL settings
POSTGRES_DB=vnstocks_production
POSTGRES_USER=trader
POSTGRES_PASSWORD=trader

# Optional: Security settings
POSTGRES_HOST_AUTH_METHOD=md5 